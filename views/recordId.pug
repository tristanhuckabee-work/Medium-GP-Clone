extends layout

append head
    link(rel="stylesheet" href="/stylesheets/recordsId.css")
    script(src="/javascripts/records.js" type="module" defer)

block content
    //- include navbar
    main
        div()
            h1= record.title
            h2= record.User.userName
            p= record.description
        div()
            h2 comment section
            form(action=`${record.id}/comments/${comments.id}` method="post" class="comments-form")
                input(type='hidden' name='_csrf' value=csrfToken)
                div(class='text-area')
                    label(for='comment') Comment here:
                    textarea(name="comment" type='text' id="comment", cols="30", rows="10")
                button(type='submit' class='comment-submit') submit
        div()

            for comment in comments
                p= comment.description
